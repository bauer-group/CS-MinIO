{
  "$schema": "https://raw.githubusercontent.com/bauer-group/automation-templates/main/.github/config/docker-base-image-monitor/docker-base-images.schema.json",
  "images": [
    {
      "name": "minio",
      "image": "quay.io/minio/minio",
      "tag": "latest",
      "variable": "MINIO_RELEASE_DIGEST",
      "description": "MinIO S3-compatible object storage server"
    },
    {
      "name": "minio-mc",
      "image": "quay.io/minio/mc",
      "tag": "latest",
      "variable": "MINIO_MC_DIGEST",
      "description": "MinIO Client (mc) - extracted into minio-init image"
    },
    {
      "name": "python-alpine",
      "image": "python",
      "tag": "3.14-alpine",
      "variable": "PYTHON_ALPINE_DIGEST",
      "description": "Python Alpine base image for minio-init"
    }
  ],
  "settings": {
    "commit-prefix": "chore(deps)",
    "auto-create-variables": true
  }
}
